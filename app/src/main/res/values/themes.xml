<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material3 Dark Theme -->
    <style name="Base.Theme.WallpaperApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors - Purple (matching website) -->
        <item name="colorPrimary">#8B5CF6</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryContainer">#7C3AED</item>
        <item name="colorOnPrimaryContainer">#E9D5FF</item>
        
        <!-- Secondary colors - Pink accent -->
        <item name="colorSecondary">#EC4899</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#DB2777</item>
        <item name="colorOnSecondaryContainer">#FCE7F3</item>
        
        <!-- Tertiary colors - Light purple -->
        <item name="colorTertiary">#A78BFA</item>
        <item name="colorOnTertiary">#1A1A2E</item>
        <item name="colorTertiaryContainer">#6D28D9</item>
        <item name="colorOnTertiaryContainer">#DDD6FE</item>
        
        <!-- Error colors -->
        <item name="colorError">#EF5350</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorErrorContainer">#C62828</item>
        <item name="colorOnErrorContainer">#FFCDD2</item>
        
        <!-- Surface colors - Deep dark with purple tint -->
        <item name="android:colorBackground">#07070D</item>
        <item name="colorOnBackground">#E3E2E6</item>
        <item name="colorSurface">#1A1A2E</item>
        <item name="colorOnSurface">#E8E8E8</item>
        <item name="colorSurfaceVariant">#252540</item>
        <item name="colorOnSurfaceVariant">#C4C7C5</item>
        
        <!-- Outline colors - Purple accent -->
        <item name="colorOutline">#8B5CF6</item>
        <item name="colorOutlineVariant">#3B3B5C</item>
        
        <!-- Disable dynamic colors -->
        <item name="dynamicColorThemeOverlay">@null</item>
    </style>

    <style name="Theme.WallpaperApp" parent="Base.Theme.WallpaperApp" />
    
    <!-- Custom Time Picker Style -->
    <style name="CustomTimePicker" parent="Widget.Material3.MaterialTimePicker">
        <item name="materialTimePickerTitleStyle">@style/CustomTimePickerTitle</item>
    </style>
    
    <style name="CustomTimePickerTitle" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="android:textColor">#A78BFA</item>
    </style>
</resources>
