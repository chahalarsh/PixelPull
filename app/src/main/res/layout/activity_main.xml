<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section with Gradient Background -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="260dp"
                android:orientation="vertical"
                android:background="@drawable/header_gradient"
                android:gravity="center"
                android:paddingTop="90dp"
                android:paddingBottom="46dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/app_name" />

                <!-- App Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#B0B0B0"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

            <!-- URL Input Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wallpaper_url_label"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/url_instructions"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="#A0A0A0"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/urlInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/url_hint"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/white_border"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="#A0A0A0"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/urlInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"
                        android:maxLines="3"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Schedule Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_label"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectTimeButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/select_time"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_outlined"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_schedule"
                    app:iconTint="#E8E8E8"
                    app:iconGravity="start"
                    app:iconSize="20dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Actions Section - Fixed at Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="?android:attr/colorBackground">

        <!-- Update Button with Inline Progress/Status -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- The button itself -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateNowButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/update_now"
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                app:backgroundTint="@null"
                android:elevation="4dp"
                style="@style/Widget.Material3.Button" />

            <!-- Progress spinner overlaid on button -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:indeterminateTint="#1A1A1A"
                android:visibility="gone" />

            <!-- Status text overlaid on button -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Last Update Status -->
        <TextView
            android:id="@+id/lastUpdateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="#606060"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
